<div class="formContainer">
    <h2>Update the drone</h2>
    <form action="/drones/{{_id}}/edit" method="POST">

        <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="name" name="name" value="{{name}}">
        </div>
        <div class="mb-3">
            <label for="propellers" class="form-label">Propulsores</label>
            <input type="number" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
        </div>

        <div class="mb-3">
            <label for="maxSpeed" class="form-label">Velocidad m√°xima</label>
            <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
        </div>

        <button type="submit" class="btn btn-dark">Editar drone</button>
        <a href="/" class="btn btn-dark">Volver al incio</a>
    </form>
</div>